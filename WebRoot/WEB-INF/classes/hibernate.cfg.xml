<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>
<session-factory>
	<!-- 数据库方言 -->
	<property name="dialect">
		org.hibernate.dialect.MySQLDialect
	</property>
	<!-- 链接jdbc -->
	<property name="connection.url">
		jdbc:mysql://localhost:3306/db_movie
	</property>
	<property name="connection.username">root</property>
	<property name="connection.password">root321</property>
	<property name="connection.driver_class">
		com.mysql.jdbc.Driver
	</property>
	<!-- 插入数据库的方式 -->
	<property name="hibernate.hbm2ddl.auto">update</property>
	<property name="show_sql">false</property>

	<!-- 提交事务 -->
	<property name="connection.autocommit">true</property>

	<property name="hibernate.jdbc.batch_size">25</property>
	<!-- 映射*.hbm.xml -->
	<!--<mapping resource="com/entity/student.hbm.xml" /> -->
	<mapping resource="com/entity/Goods.hbm.xml" />
	<mapping resource="com/entity/User.hbm.xml" />
	<mapping resource="com/entity/Role.hbm.xml" />
	<mapping resource="com/entity/BaseInfo.hbm.xml" />
	<mapping resource="com/entity/Play.hbm.xml" />
	<mapping resource="com/entity/Hall.hbm.xml" />
	<mapping resource="com/entity/UserInfo.hbm.xml" />
	<mapping resource="com/entity/Ticket.hbm.xml" />
</session-factory>
</hibernate-configuration>